<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="261dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:scrollbars="vertical"
        android:text=""
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="352dp"
        android:layout_height="95dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:scrollbars="vertical"
        android:text="@string/hello_world"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <ImageButton
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:onClick="StopListen"
        android:scaleType="centerCrop"
        android:src="@drawable/animation_button_on"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.773" />

    <Button
        android:id="@+id/micButton"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:onClick="StartListen"
        app:icon="@mipmap/mic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.76" />

    <RelativeLayout
        android:id="@+id/layout_gchat_chatbox"
        android:layout_width="412dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/button_chat_send"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:onClick="sendMessage"
            app:icon="@mipmap/keyboard" />

        <Button
            android:id="@+id/buttonHelp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:onClick="HelpButton"
            android:textSize="12sp"
            app:icon="@mipmap/question_mar" />

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="226dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/button_chat_send"
            android:layout_toEndOf="@+id/buttonHelp"
            android:background="@android:color/transparent"
            android:hint="Введите текст"
            android:inputType="text"
            android:maxLines="2"
            tools:ignore="Autofill" />

    </RelativeLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="406dp"
        android:layout_height="177dp"
        android:layout_marginTop="28dp"
        app:constraint_referenced_ids="choiseButton1,choiseButton2, choiseButton3, choiseButton4"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toTopOf="@+id/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUser" />

    <Button
        android:id="@+id/choiseButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Как играть?"
        android:visibility="visible" />

    <Button
        android:id="@+id/choiseButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Играть с капитаном"
        android:visibility="visible" />

    <Button
        android:id="@+id/choiseButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Играть одному"
        android:visibility="visible" />

    <Button
        android:id="@+id/choiseButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Играть компанией"
        android:visibility="visible" />
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-103dp" />

</androidx.constraintlayout.widget.ConstraintLayout>