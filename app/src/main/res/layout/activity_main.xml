<?xml version="1.1" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/list_of_massages"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/flow"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:stackFromBottom="true"/>

    <ImageButton
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_marginBottom="96dp"
        android:onClick="StopListen"
        android:scaleType="centerCrop"
        android:src="@drawable/animation_button_on"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/micButton"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_marginBottom="108dp"
        android:onClick="StartListen"
        app:icon="@mipmap/mic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/layout_gchat_chatbox"
        android:layout_width="412dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintVertical_bias="1.0">


        <Button
            android:id="@+id/button_chat_send"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:onClick="sendMessage"
            app:icon="@mipmap/keyboard" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="HelpButton"
            android:tint="@color/black"
            app:fabSize="mini"
            app:icon="@mipmap/question_mar" />

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="226dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/button_chat_send"
            android:layout_toEndOf="@+id/buttonHelp"
            android:background="@android:color/transparent"
            android:hint="Введите текст"
            android:inputType="text"
            android:maxLines="2"
            tools:ignore="Autofill" />

    </RelativeLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:constraint_referenced_ids="choiseButton1,choiseButton2, choiseButton3, choiseButton4"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toTopOf="@+id/img"
        />

    <Button
        android:id="@+id/choiseButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Как играть?"
        android:visibility="visible" />

    <Button
        android:id="@+id/choiseButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Играть с капитаном"
        android:visibility="visible" />

    <Button
        android:id="@+id/choiseButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Играть одному"
        android:visibility="visible"/>

    <Button
        android:id="@+id/choiseButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="EventButton"
        android:text="Играть компанией"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-103dp" />

</androidx.constraintlayout.widget.ConstraintLayout>